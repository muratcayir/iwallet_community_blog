<h2><%= t('devise.registrations.edit.edit_title', resource_name: resource_name.to_s.humanize) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-8' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="relative">
    <p class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 ml-2 font-medium text-gray-600 absolute"><%= f.label :email %></p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 pl-4 mt-2 text-base block bg-white border-gray-300 rounded-md" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.registrations.edit.waiting_confirmation', unconfirmed_email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="relative">
    <p class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 ml-2 font-medium text-gray-600 absolute"><%= f.label :password %> <i>(<%= t('devise.registrations.edit.leave_blank') %>)</i></p>
    <%= f.password_field :password, autocomplete: "new-password", class: "border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 pl-4 mt-2 text-base block bg-white border-gray-300 rounded-md" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t('devise.registrations.edit.characters_minimum') %></em>
    <% end %>
  </div>

  <div class="relative">
    <p class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 ml-2 font-medium text-gray-600 absolute"><%= f.label :password_confirmation %></p>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 pl-4 mt-2 text-base block bg-white border-gray-300 rounded-md" %>
  </div>

  <div class="relative">
    <p class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 ml-2 font-medium text-gray-600 absolute"><%= f.label :current_password %> <i>(<%= t('devise.registrations.edit.confirm_changes') %>)</i></p>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 pl-4 mt-2 text-base block bg-white border-gray-300 rounded-md" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update'), class: "w-full inline-block pt-4 pr-5 pb-4 pl-5 text-xl font-medium text-center text-white bg-gray-500 rounded-lg transition duration-200 hover:bg-gray-700 ease" %>
  </div>
<% end %>

<h3><%= t('devise.registrations.edit.cancel_account') %></h3>

<div><%= t('devise.registrations.edit.unhappy') %> <%= button_to t('devise.registrations.edit.cancel_account_button'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.confirm'), turbo_confirm: t('devise.registrations.edit.confirm') }, method: :delete %></div>

<%= link_to t('devise.registrations.edit.back'), :back, class: 'text-indigo-700 hover:text-indigo-700' %>
