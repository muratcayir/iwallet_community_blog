<h1>Articles for Tag: <%= @tag.name %></h1>

<% if @articles.any? %>
<% @articles.each do |article| %>
  <div class="border-b border-gray-200 pb-4 mb-4">
    <h2 class="text-2xl font-semibold mb-2 text-blue-500 hover:underline">
      <%= link_to article.title, article_path(article) %>
    </h2>
    <p class="text-gray-700">
      <%= article.content.to_plain_text.truncate(100) %>
    </p>
    <div class="text-gray-500">
      <span><%= article.likes_count %> Likes</span>
      <span class="ml-4"><%= article.comments_count %> Comments</span>
    </div>
  </div>
<% end %>
<% else %>
  <p>No articles found with this tag.</p>
<% end %>