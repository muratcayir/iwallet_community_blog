<nav class="flex px-2 py-3 text-white ml-4" aria-label="Breadcrumb" style="display: flex; align-items: center; font-size: 0.875rem; color: #fff; margin-bottom: 1rem;">
  <%= link_to 'Home', root_path, class: 'hover:underline text-blue-600', style: 'display: inline-flex; align-items: center; font-size: 0.875rem; font-weight: 500; color: #4B5563; transition: color 0.2s;' %>
  <svg class="h-4 w-4 text-gray-500 bg-gray-800 rounded ml-4" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem; margin: 0 0.625rem; background-color: #4B5563; fill: white;">
    <path d="M8 5l6 5-6 5V5z" />
  </svg>
  <% if params[:controller] == 'articles' %>
    <% if params[:action] == 'index' %>
      <span class="text-white" style="color: white;">Articles</span>
    <% elsif params[:action] == 'new' %>
      <%= link_to 'Articles', articles_path, class: 'hover:underline text-blue-600', style: 'display: inline-flex; align-items: center; font-size: 0.875rem; font-weight: 500; color: #4B5563; transition: color 0.2s;' %>
      <svg class="h-4 w-4 text-gray-500 bg-gray-800 rounded" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem; margin: 0 0.625rem; background-color: #4B5563; fill: white;">
        <path d="M8 5l6 5-6 5V5z" />
      </svg>
      <span class="text-white" style="color: white;">New Article</span>
    <% elsif params[:action] == 'edit' && defined?(@article) && @article.present? %>
      <%= link_to 'Articles', articles_path, class: 'hover:underline text-blue-600', style: 'display: inline-flex; align-items: center; font-size: 0.875rem; font-weight: 500; color: #4B5563; transition: color 0.2s;' %>
      <svg class="h-4 w-4 text-gray-500 bg-gray-800 rounded" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem; margin: 0 0.625rem; background-color: #4B5563; fill: white;">
        <path d="M8 5l6 5-6 5V5z" />
      </svg>
      <%= link_to @article.title, article_path(@article), class: 'hover:underline text-blue-600', style: 'display: inline-flex; align-items: center; font-size: 0.875rem; font-weight: 500; color: #4B5563; transition: color 0.2s;' %>
      <svg class="h-4 w-4 text-gray-500 bg-gray-800 rounded" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem; margin: 0 0.625rem; background-color: #4B5563; fill: white;">
        <path d="M8 5l6 5-6 5V5z" />
      </svg>
      <span class="text-white" style="color: white;">Edit</span>
    <% elsif params[:action] == 'show' && defined?(@article) && @article.present? %>
      <%= link_to 'Articles', articles_path, class: 'hover:underline text-blue-600', style: 'display: inline-flex; align-items: center; font-size: 0.875rem; font-weight: 500; color: #4B5563; transition: color 0.2s;' %>
      <svg class="h-4 w-4 text-gray-500 bg-gray-800 rounded" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem; margin: 0 0.625rem; background-color: #4B5563; fill: white;">
        <path d="M8 5l6 5-6 5V5z" />
      </svg>
      <span class="text-white" style="color: white;"><%= @article.title %></span>
    <% end %>
  <% end %>
</nav>
